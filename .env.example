# Environment configuration for CommuteOS
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=CommuteOS
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# API Gateway
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=commuteos
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10
CACHE_TTL=600

# Routing Service
ROUTING_SERVICE_HOST=routing_service
ROUTING_SERVICE_PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
